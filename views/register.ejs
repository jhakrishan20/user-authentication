<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" type="text/css" href="/style3.css" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.14.0/css/all.css"
    />
</head>
</head>
<body>

    <% if(messages.error) { %>
      <div align="center">
        <ul>
          <% messages.error.forEach(function(error) { %>
            <h3><%= error %></h3>
            <% }); %>
        </ul>
      </div>
      <% } else if(messages.success) { %>
        <div align="center">
          <ul>
            <% messages.success.forEach(function(success) { %>
              <h3><%= success %></h3>
              <% }); %>
          </ul>
        </div>
        <% } %>

    <form method="post" action="/register" align="center">
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                  <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
          
                      <div class="mb-md-5 mt-md-4 pb-5">
          
                        <h2 class="fw-bold mb-2 text-uppercase">Signup</h2>
                        <p class="text-white-50 mb-5">Please create your login ID and password!</p>
          
                        <div class="form-outline form-white mb-4">
                          <input type="text" id="typefrstname" class="form-control form-control-lg" name="firstName"/>
                          <label class="form-label" for="typeEmailX">First name</label>
                        </div>
                         <br>
                         <div class="form-outline form-white mb-4">
                          <input type="text" id="typelstname" class="form-control form-control-lg" name="lastName"/>
                          <label class="form-label" for="typeEmailX">Last name</label>
                        </div>
                         <br>
                         <div class="form-outline form-white mb-4">
                          <input type="email" id="typeEmailX" class="form-control form-control-lg" name="username"/>
                          <label class="form-label" for="typeEmailX">Email</label>
                        </div>
                        <br>
                        <div class="form-outline form-white mb-4">
                          <input type="password" id="typePasswordX" class="form-control form-control-lg" name="password" />
                          <label class="form-label" for="typePasswordX">Password</label>
                        </div>
                        <br>
                        <button class="btn btn-outline-light btn-lg px-5" type="submit">Register</button>
                        
                      </div>
          
                      <div>
                        <p class="mb-0">Already have an account? <a href="/login" class="text-white-50 fw-bold">Login</a>
                        </p>
                      </div>

                      <br>

                      <div>
                        <p class="mb-0"><a href="/" class="text-white-50 fw-bold"><h3>HOME</h3></a>
                        </p>
                      </div>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
    </form>

</body>
</html>